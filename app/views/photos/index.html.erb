<div class="page-header">
  <h1>
    Photos
    <a href="/photos/new" class="btn btn-lg btn-success">New Photo</a>
  </h1>
</div>
<% @photos.each do |photo| %>

<div class="panel panel-default">
  <div class="panel-heading"><%=photo.user_id%> <%=time_ago_in_words(photo.created_at)%></div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-hover">
          <tr>
            <th>Caption</th>
            <th>Image</th>
            <th>User</th>
            <th>Actions</th>
          </tr>
          <tr>
            <td><%= photo.caption %></td>
            <td><%= photo.image %></td>
            <td><%= photo.user_id %></td>
            <%if current_user.id == photo.user_id %>
            <td>
              <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a>
              <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">Edit</a>
              <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
            </td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
<%end%>
