<div class="page-header">
  <h1>
    <%=current_user.username%>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>URL</th>
      </tr>

      <% Photo.where(:user_id => @user.id).each do |photo| %>
      <tr>
          <td><%= photo.caption %></td>
          <td><%= photo.image %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
